{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",

    "strict": true,
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",
   
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "noEmitOnError": true,
    "esModuleInterop": true,                 

    "forceConsistentCasingInFileNames": true
  }
}
